<div class="row">
    {{#each notas}}
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        {{titulo}} <a href="/notas/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                    </h4>
                    <p>{{descripcion}}</p>
                    <form action="/notas/eliminar/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" value="DELETE" name="_method">
                        <button class="btn btn-danger btn-block btn-sm" type="submit">
                            Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
        {{else}}
            <div class="card mx-auto">
                <div class="card-body">
                    <p class="lead">Agrega una nota.</p>
                    <a href="/notas/agregar" class="btn btn-success btn block">Agregar una Nota</a>
                </div>
            </div>
    {{/each}}
</div>